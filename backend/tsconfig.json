{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": true,
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules"]
}
